---
import { Image } from 'astro:assets';
import DefaultLayout from "src/layouts/defaultLayout.astro";
import BannerPhoto from "src/assets/ak-banner-photo.jpg";
import DealerPhoto1 from "src/assets/dealer-photos/ak-dealer-photo-1.jpeg";
import DealerPhoto2 from "src/assets/dealer-photos/ak-dealer-photo-2.jpeg";
import VaporPhoto1 from "@assets/vapor-photos/vapor-photo-1.jpg";
import VaporPhoto2 from "@assets/vapor-photos/vapor-photo-2.jpg";
import VaporPhoto3 from "@assets/vapor-photos/vapor-photo-3.jpg";
import VaporPhoto4 from "@assets/vapor-photos/vapor-photo-4.jpg";
import VaporPhoto5 from "@assets/vapor-photos/vapor-photo-5.jpg";
import VaporPhoto6 from "@assets/vapor-photos/vapor-photo-6.jpg";

interface ServicesRates {
  type: string;
  price: number;
}

interface Services {
  name: string;
  description: string;
}

const serviceRates: ServicesRates[] = [
  {
    type: 'Labor',
    price: 150
  },
  {
    type: 'Fabrication Labor',
    price: 180
  },
  {
    type: 'Vapor Blasting',
    price: 120
  }
]

const services: Services[] = [
  {
    name: 'Maintenance',
    description: 'From oil changes to full services, we handle nearly all makes and models, specializing in vintage motorcycles.'
  },
  {
    name: 'Carburetors',
    description: 'We offer ultrasonic cleaning, sync, tuning, and rebuild services for any motorcycle.'
  },
  {
    name: 'Wiring',
    description: 'We troubleshoot electrical issues and offer stock harness reproductions or fully custom harnesses based on your needs.'
  },
  {
    name: 'Restorations',
    description: 'Complete restoration services, including sourcing rare parts and replicating most stock components.'
  },
  {
    name: 'Painting',
    description: 'We collaborate with top quality painters to offer custom and stock colors for your bike`s perfect finish.'
  },
  {
    name: 'Vapor Blasting',
    description: 'Restore parts to like-new condition with our gentle yet effective vapor blasting, removing dirt, corrosion, and coatings safely.'
  }
]
---

<DefaultLayout title="Services">
  <div class="text-center">
    <Image 
      class="md:w-4/12 m-auto mb-4"
      alt="Services Hero" 
      src={BannerPhoto} 
    />

    <h2 class="text-xl text-burnt-red mb-4">
      Service Rates  
    </h2>
    {serviceRates.map(service => {
      return (
        <p class="text-cream mb-2">
          {`${service.type} - $${service.price}/hour`}
        </p>
      )
    })}

    <h2 class="text-xl text-burnt-red mt-16">
      Available Services
    </h2>
    <div class="text-cream mt-4 grid grid-cols-1 md:grid-cols-2 gap-4 w-4/6 lg:w-1/2 m-auto">
      {services.map(service => {
        return (
          <div class="md:w-4/6 md:h-48 lg:h-40 md:m-auto">
            <p class="text-burnt-orange">
              {service.name}
            </p>

            <p>
              {service.description}
            </p>
          </div>
        )
      })}
    </div>

    <h2 class="text-xl text-burnt-red mt-16 mb-4">
      Authorized Dealer
    </h2>

    <div
      class="flex flex-row gap-2 w-96 m-auto"
    >
      <Image 
        class="m-auto mb-4 h-36 w-36"
        alt="Services Hero" 
        src={DealerPhoto1} 
      />
  
      <Image 
        class="m-auto mb-4 h-36 w-36"
        alt="Services Hero" 
        src={DealerPhoto2} 
      />
    </div>

    <h2 class="text-xl text-burnt-red mt-16 mb-4">
      Vapor Blasting Results 
    </h2>

    <div class="w-6/12 mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2">
        <div class="rounded-sm overflow-hidden shadow-md">
            <img src={VaporPhoto1.src} alt="Vapor Blasting Photo 1" class="w-full object-contain">
        </div>

        <div class="rounded-sm overflow-hidden shadow-md">
            <img src={VaporPhoto2.src} alt="Vapor Blasting Photo 2" class="w-full object-contain">
        </div>

        <div class="rounded-sm overflow-hidden shadow-md">
            <img src={VaporPhoto3.src} alt="Vapor Blasting Photo 3" class="w-full object-contain">
        </div>

        <div class="rounded-sm overflow-hidden shadow-md">
            <img src={VaporPhoto4.src} alt="Vapor Blasting Photo 4" class="w-full object-contain">
        </div>

        <div class="rounded-sm overflow-hidden shadow-md">
          <img src={VaporPhoto5.src} alt="Vapor Blasting Photo 5" class="w-full object-contain">
        </div>

        <div class="rounded-sm overflow-hidden shadow-md">
          <img src={VaporPhoto6.src} alt="Vapor Blasting Photo 6" class="w-full object-contain">
        </div>
    </div>
  </div>
  </div>
</DefaultLayout>