---
import { HamburgerMenuIcon } from "@radix-ui/react-icons";
import Image from "astro/components/Image.astro";
import logo from "@assets/ak-cycles-logo.jpg"
---

<nav class="fixed w-full bg-black border-gray-200 dark:bg-gray-900">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image src={logo} alt="ak-logo" class="h-24 w-[109px]"/>
    </a>
    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-1 w-8 h-8 justify-center text-sm text-gray-500 rounded-md md:hidden focus:outline-none focus:ring-1 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <HamburgerMenuIcon />
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul class="font-medium flex flex-col p-1 md:p-0 mt-4 border border-gray-100 rounded-md  md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
        <li>
          <a href="/" class="block py-2 px-3 text-cream md:hover:bg-transparent md:border-0 md:hover:text-burnt-orange md:p-0">Home</a>
        </li>
        <li>
          <a href="/services" class="block py-2 px-3 text-cream md:hover:bg-transparent md:border-0 md:hover:text-burnt-orange md:p-0">Services</a>
        </li>
        <li>
          <a href="/contact" class="block py-2 px-3 text-cream md:hover:bg-transparent md:border-0 md:hover:text-burnt-orange md:p-0">Contact</a>
        </li>
      </ul>
    </div>
  </div>
</nav>